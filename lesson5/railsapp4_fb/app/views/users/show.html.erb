<h1>Users#show</h1>
<br/>
<%= @user.first_name + " " + @user.last_name %>

<br/>
<%= link_to "Create new post", new_post_path %><br/>
<%= link_to "Delete User", user_path(@user.id), method: :delete %><br/>

<% @posts = Post.where(user_id: params[:id])%>
<% @posts.each do |post| %>
	<%= post.title + " " + post.body %>
	<%= link_to "Edit Post", edit_post_path(post) %><br/>
<% end %>